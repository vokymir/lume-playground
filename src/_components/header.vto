        <li>
          {{ if item.data.url }}
            <a href="{{ item.data.url }}">
            {{ prefix + item.data.title }}
            </a>
          {{ /if }}
          {{ if item.children }}
            {{ renderTree(item.children, "-") }}
          {{ /if }}
        </li>
      {{ /if }}
    {{ /for }}
{{ /function }}

